<Window x:Class="AsyncTestUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncTestUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Width="100" Margin="5" Height="40" Content="Синхронно" Click="ButtonBase_OnClick" />
        <Button Width="100" Margin="5" Height="40" Content="Parallel.ForEach" Click="Parallel_OnClick" />
        <Button Width="100" Margin="5" Height="40" Content="Tasks" Click="Tasks_OnClick" x:Name="ButtonTask" />
        <Button Width="100" Margin="5" Height="40" Content="Cancel" Click="Cancel_OnClick" IsEnabled="False" x:Name="ButtonCancel" />
        <TextBlock x:Name="StatusLogTextBlock" Text="Start Load" />
    </StackPanel>
</Window>